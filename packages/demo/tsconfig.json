{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "ES2023",
    ],
    "rootDirs": [
      "./",
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@demo/*": [
        "./src/*"
      ],
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
  },
  "include": [
    "src",
    "./typings/*",
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./typings",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}